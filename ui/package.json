{
	"name": "translation-helps-ui",
	"type": "module",
	"version": "7.3.0",
	"scripts": {
		"dev": "vite dev",
		"build": "node ../scripts/sync-version.js && vite build",
		"build:cloudflare": "node ../scripts/sync-version.js && vite build",
		"build:cloudflare-full": "cd .. && node scripts/generate-platform-functions.js && cd ui && npm run build:cloudflare",
		"preview": "vite preview",
		"prepare": "npx @sveltejs/kit sync || echo ''",
		"check": "npx @sveltejs/kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "npx @sveltejs/kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run && npm run test:e2e",
		"test:e2e": "playwright test",
		"test:visual": "playwright test tests/visual",
		"test:visual:update": "playwright test tests/visual --update-snapshots",
		"test:visual:ui": "playwright test tests/visual --ui"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@fontsource/fira-mono": "^5.0.0",
		"@playwright/test": "^1.54.2",
		"@sveltejs/adapter-static": "^3.0.8",
		"@tailwindcss/typography": "^0.5.16",
		"@vitest/browser": "^3.2.3",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^3.0.0",
		"globals": "^16.0.0",
		"playwright": "^1.53.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"svelte": "^5.25.0",
		"svelte-check": "^4.0.0",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0",
		"vite": "^7.0.4",
		"vite-plugin-devtools-json": "^0.2.0",
		"vitest": "^3.2.3",
		"vitest-browser-svelte": "^0.1.0"
	},
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.15.1",
		"@neoconfetti/svelte": "^2.0.0",
		"@sveltejs/adapter-cloudflare": "^4.9.0",
		"@sveltejs/kit": "^2.22.0",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@tailwindcss/vite": "^4.0.0",
		"@translation-helps/mcp-client": "^1.2.1",
		"@types/node": "^24.0.14",
		"@types/prismjs": "^1.26.5",
		"fflate": "^0.8.2",
		"lucide-svelte": "^0.525.0",
		"marked": "^16.1.1",
		"mdsvex": "^0.12.3",
		"prismjs": "^1.30.0",
		"tailwindcss": "^4.0.0",
		"zod": "^4.0.10"
	}
}
